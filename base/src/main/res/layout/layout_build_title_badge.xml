<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spacing_large"
    android:orientation="horizontal">

    <com.kevalpatel2106.ci.greenbuild.base.view.BaseTextView
        android:id="@+id/build_status_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_build_title_text"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/spacing_micro"
        android:paddingStart="@dimen/spacing_micro"
        android:textAppearance="@style/SmallText.Primary"
        tools:text="Build on master"
        tools:textColor="@android:color/white" />

    <com.kevalpatel2106.ci.greenbuild.base.view.BaseTextView
        android:id="@+id/build_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_build_status_text"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/spacing_micro"
        android:paddingStart="@dimen/spacing_micro"
        android:textAppearance="@style/SmallText.Primary"
        android:textStyle="bold"
        tools:backgroundTint="@color/build_passed"
        tools:text="Passed"
        tools:textColor="@android:color/white" />

</LinearLayout>